@page "/"
@model Proiect.Pages.Contracte.IndexModel


@{
    ViewData["Title"] = "Index";
}

<h1>Buna ziua! </h1>
<h1> Inainte de a face o rezervare, va rugam sa pargurceti cele trei sectiuni in ce ordine doriti </h1>
<br>
<br>
<p>
    <a asp-page="Create">Adaugati rezervare</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].TransportID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].ClientID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].CazareID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].DataContract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract[0].Transport.Firma)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contract)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Transport.Firma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cazare.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataContract)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Transport.Firma)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

